                                                <div>
                                                    <div class="comparo-product">
                                                        <a href="/telephone-portable/asus-zenfone-2-ze551ml-p23221/test.html">

                                                            <img src="assets/images/core/smartphones/extra/{{ item['pictureS']}}-s.jpg" data-id="23221" class="product-thumbnail">
                                                        </a>
                                                        <h4 style="height: 52px;">
                                                            <a href="/telephone-portable/asus-zenfone-2-ze551ml-p23221/test.html">{{ item['constructorS']}} {{ item['fullNameS']}} ({{  item['codeNameS'] }})</a>
                                                        </h4>
                                                        <br>
                                                        {%  set mark = 0 %}
                                                        {% if item['mark'] is defined  %}
                                                            {% set mark = item['mark'] %}
                                                        {% endif %}
                                                        {% if item['mark'] is defined %}
                                                            <div class="progress">
                                                                <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="{{item['mark']| round(1)}}" aria-valuemin="0" aria-valuemax="100" style="width:{{(mark| round(1)) * 10}}%">
                                                                    {{item['mark']| round(1)}}
                                                                </div>
                                                            </div>

                                                        {% else %}
                                                            <div class="progress">
                                                                <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width:100%;background: black;">
                                                                    Non noté
                                                                </div>
                                                            </div>
                                                        {% endif %}


                                                        <a class="button-choice"  href="spec/{{item['idS']}}" data-title="Comparé">
                                                            Voir sa fiche
                                                        </a>
                                                        {% if item['priceS'] is not empty  %}
                                                            <div class="lowest-price" style="height: 36px;">

                                                                Prix de lancement
                                                                <span class="suggested">{{ item['priceS'] }} €</span>

                                                            </div>
                                                        {% endif %}
                                                    </div>
                                                </div>

                                            {% else %}
                                                <div id="box-no-result" class="no-result hidden-box">
                                                    <strong>Aucun produit ne correspond à votre recherche</strong><br>
                                                    Modifiez vos critères.
                                                </div>
                                            {% endfor %}



                                        </div>




                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
